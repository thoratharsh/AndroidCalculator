<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:text="answer"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/ans_textView"
            app:layout_constraintHorizontal_bias="0.0"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginTop="10dp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="My Calculator"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/textView"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toTopOf="parent" android:textSize="20sp"
    />
    <Button
            android:text="1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/button1" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/ans_textView"
            app:layout_constraintStart_toStartOf="@+id/ans_textView"
            android:layout_marginLeft="10dp" android:layout_marginStart="10dp"/>
    <Button
            android:text="2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/button2"
            android:layout_marginLeft="20dp" android:layout_marginTop="20dp" android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@+id/ans_textView" app:layout_constraintStart_toEndOf="@+id/button1"/>
    <Button
            android:text="3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/button3" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/ans_textView" app:layout_constraintStart_toEndOf="@+id/button2"
            android:layout_marginLeft="20dp" android:layout_marginStart="20dp"
    />
    <Button
            android:text="C"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/buttonC" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/ans_textView" android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp" app:layout_constraintStart_toEndOf="@+id/button3"
    />
    <Button
            android:text="4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/button4"
            app:layout_constraintTop_toBottomOf="@+id/button1"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="@+id/ans_textView"
            android:layout_marginLeft="10dp" android:layout_marginStart="10dp"/>
    <Button
            android:text="5"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/button5"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/button2"
            app:layout_constraintStart_toEndOf="@+id/button4" android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"/>
    <Button
            android:text="6"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/button6"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/button3"
            app:layout_constraintStart_toEndOf="@+id/button5"
            android:layout_marginLeft="20dp" android:layout_marginStart="20dp"/>
    <Button
            android:text="7"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/button7" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/button4"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"/>
    <Button
            android:text="8"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/button8" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/button5" android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp" app:layout_constraintStart_toEndOf="@+id/button7"
    />
    <Button
            android:text="9"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/button9" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/button6" android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp" app:layout_constraintStart_toEndOf="@+id/button8"
    />
    <Button
            android:text="0"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/button0"
            app:layout_constraintStart_toStartOf="@+id/ans_textView" android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/button7"/>
    <Button
            android:text="+"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/buttonPlus" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonC" android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp" app:layout_constraintStart_toEndOf="@+id/button6"/>
    <Button
            android:text="-"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/buttonMinus" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonPlus" android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp" app:layout_constraintStart_toEndOf="@+id/button9"/>
    <Button
            android:text="="
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/buttonEquals" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/button8" android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp" app:layout_constraintStart_toEndOf="@+id/button0"/>
    <Button
            android:text="/"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/buttonDiv" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/button9" android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp" app:layout_constraintStart_toEndOf="@+id/buttonEquals"/>
    <Button
            android:text="X"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/buttonMul" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonMinus" android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp" app:layout_constraintStart_toEndOf="@+id/buttonDiv"/>

</android.support.constraint.ConstraintLayout>